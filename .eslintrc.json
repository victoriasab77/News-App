{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks",
        "prettier",
        "prettier/react"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".js", ".jsx"]
          }
        ],
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "prefer-promise-reject-errors": "off",
        "no-prototype-builtins": "off",
        "prettier/prettier": [
          "error",
          {
            "trailingComma": "all",
            "singleQuote": true,
            "printWidth": 80
          }
        ],
        "react/jsx-props-no-spreading": [
          0,
          {
            "html": "ignore",
            "custom": "ignore",
            "explicitSpread": "ignore"
          }
        ]
      }
}
